<div id="all">
  <div id="content">
    <div class="container">
      <div class="row">
        <div class="col-lg-12">
          <!-- breadcrumb-->
          <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
              <li class="breadcrumb-item"><a href="/">Home</a></li>
              <li aria-current="page" class="breadcrumb-item active">Category</li>
            </ol>
          </nav>
        </div>
        <div class="col-lg-3">
          <!--
              *** MENUS AND FILTERS ***
              _________________________________________________________
              -->
          <div class="card sidebar-menu mb-4">
            <div class="card-header">
              <h3 class="h4 card-title">Categories</h3>
            </div>
            <div class="card-body">
              <ul class="nav nav-pills flex-column category-menu">
                <li><a href="/category" class="nav-link">Men <span class="badge badge-secondary">42</span></a>
                  <ul class="list-unstyled">
                    <li><a href="/category" class="nav-link">Shirts</a></li>
                    <li><a href="/category" class="nav-link">Pants</a></li>
                    <li><a href="/category" class="nav-link">Accessories</a></li>
                    <li><a href="/category" class="nav-link">T-shirts</a></li>
                  </ul>
                </li>
                <li><a href="/category" class="nav-link active">Ladies <span class="badge badge-light">123</span></a>
                  <ul class="list-unstyled">
                    <li><a href="/category" class="nav-link">T-shirts</a></li>
                    <li><a href="/category" class="nav-link">Skirts</a></li>
                    <li><a href="/category" class="nav-link">Pants</a></li>
                    <li><a href="/category" class="nav-link">Accessories</a></li>
                  </ul>
                </li>
                <li><a href="/category" class="nav-link">Kids <span class="badge badge-secondary">11</span></a>
                  <ul class="list-unstyled">
                    <li><a href="/category" class="nav-link">T-shirts</a></li>
                    <li><a href="/category" class="nav-link">Skirts</a></li>
                    <li><a href="/category" class="nav-link">Pants</a></li>
                    <li><a href="/category" class="nav-link">Accessories</a></li>
                  </ul>
                </li>
              </ul>
            </div>
          </div>
          <div class="card sidebar-menu mb-4">
            <div class="card-header">
              <h3 class="h4 card-title">Brands <a href="#" id="brand" class="btn btn-sm btn-danger pull-right"><i
                    class="fa fa-times-circle"></i> Clear</a></h3>
            </div>
            <div class="card-body">
              <form method="GET" action="/category">
                <div class="form-group">
                  {{#each colorsBrandsListProduct.brands}}
                    <div class="checkbox">
                      <label for="{{this}}">
                        <input type="checkbox" name="brand" value="{{this}}"> {{this}} (10)
                      </label>
                    </div>
                     {{/each }}
                </div>
                <button class="btn btn-default btn-sm btn-primary"><i class="fa fa-pencil"></i> Apply</button>
              </form>
            </div>
          </div>
          <div class="card sidebar-menu mb-4">
            <div class="card-header">
              <h3 class="h4 card-title">Colours <a href="#" id="color" class="btn btn-sm btn-danger pull-right"><i
                    class="fa fa-times-circle"></i> Clear</a></h3>
            </div>
            <div class="card-body">
              <form method="GET" action="/category" >
                <div class="form-group">
                  {{#each colorsBrandsListProduct.colors}}
                    <div class="checkbox">
                      <label for="{{this}}">
                        <input type="checkbox" name="color" value="{{this}}"><span class="colour"></span> {{this}} (14)
                      </label>
                    </div>
                  {{/each }}
                </div>
                <button type="submit" class="btn btn-default btn-sm btn-primary"><i class="fa fa-pencil" ></i> Apply</button>
              </form>
            </div>
          </div>
          <!-- *** MENUS AND FILTERS END ***-->
          <div class="banner"><a href="#"><img src="/img/banner.jpg" alt="sales 2014" class="img-fluid"></a></div>
        </div>
        <div class="col-lg-9">
          <div class="box">
            <h1>Category</h1>
            <p>In our Ladies department we offer wide selection of the best products we have found and carefully
              selected worldwide.</p>
          </div>

          <div class="box">
              <div class="card-header">
                  <h4 class="card-title">Search</h4>
              </div>
              <div class="card-body">
                  <form class="form form-vertical">
                      <div class="row">
                          <div class="col-3">
                              <div class="mb-1">
                                  <label class="form-label" for="first-name-icon">Brand</label>
                                  <div class="input-group input-group-merge">
                                      <span class="input-group-text"><img src="https://img.icons8.com/material-outlined/24/000000/company.png"/></span>
                                     <select required name="Brand" class="form-control">
                                      <option disabled selected value>None</option>
                                      <option>Price</option>
                                      <option>Name</option>
                                     </select>
                                  </div>
                              </div>
                          </div>
                          <div class="col-3">
                              <div class="mb-1">
                                  <label class="form-label" for="email-id-icon">Color</label>
                                  <div class="input-group input-group-merge">
                                      <span class="input-group-text"><img src="https://img.icons8.com/material-outlined/24/000000/afro-pick.png"/></span>
                                      <select required name="Color" class="form-control">
                                        <option disabled selected value>None</option>
                                        <option>Price</option>
                                        <option>Name</option>
                                     </select>
                                  </div>
                              </div>
                          </div>
                          <div class="col-3">
                              <div class="mb-1">
                                  <label class="form-label" for="contact-info-icon">Size</label>
                                  <div class="input-group input-group-merge">
                                      <span class="input-group-text"><img src="https://img.icons8.com/material-outlined/24/000000/hanger.png"/></span>
                                      <select required name="Size" class="form-control">
                                        <option disabled selected value>None</option>
                                        <option>Price</option>
                                        <option>Name</option>
                                     </select>
                                  </div>
                              </div>
                          </div>
                          <div class="col-3">
                              <div class="mb-1">
                                  <label class="form-label" for="password-icon">Material</label>
                                  <div class="input-group input-group-merge">
                                      <span class="input-group-text"><img src="https://img.icons8.com/material-outlined/24/000000/t-shirt.png"/></span>
                                      <select required name="Material" class="form-control">
                                        <option disabled selected value>None</option>
                                        <option>Price</option>
                                        <option>Name</option>
                                     </select>
                                  </div>
                              </div>
                          </div>
                      </div>
                          <div class="d-flex justify-content-end" >
                              <button type="submit" class="btn btn-default btn-sm btn-primary">Search</button>
                          </div>
                  </form>
              </div>
            </div>
          <div class="box info-bar">
            <div class="row">
              <div class="col-md-12 col-lg-4 products-showing">Showing <strong>{{productToShow.length}}</strong> of
                <strong>{{length}}</strong>
                products</div>
              <div class="col-md-12 col-lg-7 products-number-sort">
                <form class="form-inline d-block d-lg-flex justify-content-between flex-column flex-md-row" method="GET" action="/category">
                  {{!-- <div class="products-number"><strong>Show</strong><a href="#" class="btn btn-sm btn-primary">12</a><a
                      href="#" class="btn btn-outline-secondary btn-sm">24</a><a href="#"
                      class="btn btn-outline-secondary btn-sm">All</a><span>products</span>
                  </div> --}}
                  <div class="products-sort-by mt-2 mt-lg-0"><strong>Sort by</strong>
                    <select name="sortBy" class="form-control" onchange="this.form.submit()" >
                      <option>Price</option>
                      <option>Name</option>
                    </select>
                  </div>
                </form>
              </div>
            </div>
          </div>
          <div class="row products">
            {{#each productToShow}}
            <div class="col-lg-4 col-md-6">
              <div class="product">
                <div class="flip-container">
                  <div class="flipper">
                    <div class="front "><a href="/category/product/{{slug}}"><img src="{{image}}" alt="" class="img-fluid product-img"></a>
                    </div>
                    <div class="back "><a href="/category/product/{{slug}}"><img src="{{image2}}" alt="" class="img-fluid product-img"></a>
                    </div>
                  </div>
                </div><a href="/category/product/{{slug}}" class="invisible"><img src="{{image}}" alt="" class="img-fluid product-img"></a>
                <div class="text">
                  <h3><a href="/category/product/{{slug}}">{{name}}</a></h3>
                  <p class="price">
                    <del></del>${{price}}
                  </p>
                  <p class="buttons"><a href="/category/product/{{slug}}" class="btn btn-outline-secondary">View detail</a><a
                      href="/cart/{{_id}}" class="btn btn-primary"><i class="fa fa-shopping-cart"></i>Add to cart</a></p>
                </div>
                <!-- /.text-->
              </div>
              <!-- /.product            -->
            </div>
            {{/each }}
          </div>
          <div class="pages">
            {{!-- <p class="loadMore"><a href="#" class="btn btn-primary btn-lg"><i class="fa fa-chevron-down"></i> Load
                more</a></p> --}}
            <nav aria-label="Page navigation example" class="d-flex justify-content-center">
              <ul class="pagination">
                  {{#if previous.isHas}}
                  <li class="page-item"><a href="/category?page={{previous.page}}" aria-label="Previous"
                      class="page-link"><span aria-hidden="true">«</span><span class="sr-only">Previous</span></a></li>
                  {{/if}}
                  {{#each pageBar}}
                  <li class="page-item {{active}}">
                    <a href="/category?{{extractParams params}}&page={{page}}" class="page-link">{{page}}</a>
                  </li>
                  {{/each}}
                  {{!-- <li class="page-item active"><a href="#" class="page-link">1</a></li>
                  <li class="page-item"><a href="#" class="page-link">2</a></li>
                  <li class="page-item"><a href="#" class="page-link">3</a></li>
                  <li class="page-item"><a href="#" class="page-link">4</a></li>
                  <li class="page-item"><a href="#" class="page-link">5</a></li> --}}
                  {{#if next.isHas}}
                  <li class="page-item"><a href="/category?page={{next.page}}" aria-label="Next" class="page-link"><span
                        aria-hidden="true">»</span><span class="sr-only">Next</span></a></li>
                  {{/if}}
              </ul>
            </nav>
          </div>
        </div>
        <!-- /.col-lg-9-->
      </div>
    </div>
  </div>
</div>